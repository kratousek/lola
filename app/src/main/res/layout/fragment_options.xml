                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


